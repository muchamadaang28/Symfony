{% extends '::base.html.twig' %}

{% block body -%}
    <h1>List Pendaftaran</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pendaftar_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <li class="fa fa-list-alt">
                        <a href="{{ path('pendaftar_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li class="fa fa-pencil-square-o">
                        <a href="{{ path('pendaftar_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pendaftar_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
